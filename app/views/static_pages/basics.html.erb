                </tr>
                <tr>
                    <th>POST</th>
                    <td><em>create</em></td>
                </tr>
                <tr>
                    <th>PATCH</th>
                    <td><em>update</em></td>
                </tr>
                <tr>
                    <th>DELETE</th>
                    <td><em>destroy</em></td>
                </tr>
            </tbody>
        </table>
        </li>
    </ul>
    </li>
</ul>
